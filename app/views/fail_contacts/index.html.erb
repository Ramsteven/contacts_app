<div>
  <div>
    <div class="container text-center">
    <h1>List failed Contact</h1>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Contact</th>
            <th scope="col">Message</th>
            <th scope="col">view</th>
          </tr>
        </thead>
        <tbody>
          <% @faileds.each do | contact |%>
          <tr>
            <th scope="row"><%= contact.id %></th>
            <td><%= contact.email %></td>
            <td><%= contact.message %></td>
            <td><%=link_to "View", fail_contact_path(contact.id)%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
