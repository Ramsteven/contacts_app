<div>
  <div>
    <div class="container text-center">
      <h1>List failed Contact</h1>
      <div class="flickr_pagination m-4">
        <%= will_paginate @faileds, :container => false %>
      </div>

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Contact</th>
            <th scope="col">Message</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @faileds.each do | contact |%>
          <tr>
            <th scope="row"><%= contact.id %></th>
            <td><%= contact.email %></td>
            <td><%= contact.message %></td>
            <td><%=link_to "View", fail_contact_path(contact.id), class: "btn-sm btn-warning"%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      <div class="flickr_pagination m-4">
        <%= will_paginate @faileds, :container => false %>
      </div>

    </div>
  </div>
</div>
